# Application
APP_PORT=8000

# Docker ports
DOCKER_APP_PORT=8000

# Database
DATABASE_URL=postgresql://companyhub:password@db:5432/companyhub
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Admin interfaces
PGADMIN_PORT=8080
PGADMIN_DEFAULT_EMAIL=admin@companyhub.com
PGADMIN_DEFAULT_PASSWORD=admin123
REDIS_COMMANDER_PORT=8081

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# OAuth Providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/auth/callback/github

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

# Google reCAPTCHA Configuration
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_VERIFY_URL=https://www.google.com/recaptcha/api/siteverify
RECAPTCHA_ENABLED=true
RECAPTCHA_MIN_SCORE=0.5
RECAPTCHA_TIMEOUT=10

# REGON API
REGON_API_URL=https://wyszukiwarkaregon.stat.gov.pl/wsBIR/UslugaBIRzewnPubl.svc
REGON_API_KEY=your-regon-api-key

# MF API
MF_API_URL=https://wl-api.mf.gov.pl

# VIES API
